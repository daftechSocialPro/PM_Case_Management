<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4A81D4"
            
            android:orientation="horizontal"
            android:id="@+id/linerItem"
            android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codelia"
            android:textColor="@color/white"
            android:id="@+id/item_affirType"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linerItem"
            android:layout_marginTop="16dp"
            android:id="@+id/linerItem2"

              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codelia"
                android:textColor="#117964"
                android:id="@+id/item_fromEmployee"
                android:layout_below="@id/linerItem"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codelia"
                android:textColor="@color/black"
                android:id="@+id/item_fromStructure"
                android:layout_below="@id/item_fromEmployee"
                android:textStyle="bold"
                android:layout_marginTop="2dp"

                />


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                  >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Codelia"

                       android:id="@+id/item_subject"

                       android:layout_marginTop="2dp"

                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Codelia"
                       android:textColor="@color/black"
                       android:id="@+id/item_ReciverType"
                       android:layout_below="@id/item_fromEmployee"

                       android:layout_marginTop="4dp"

                       />



               </LinearLayout>


               <androidx.cardview.widget.CardView
                   android:id="@+id/affircard"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:paddingRight="16dp"
                   android:layout_marginRight="15dp"
                   app:cardBackgroundColor="#F1F5F7"
                   app:cardCornerRadius="20dp">

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/item_AffairNO"
                           android:text="hello"
                           android:padding="16dp"

                           android:textSize="23dp"



                           />







               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/affircard2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:padding="4dp"
                   app:cardBackgroundColor="#F1F5F7"
                   android:layout_marginTop="-15dp"
                   app:cardCornerRadius="10dp"

                   android:layout_below="@+id/affircard">
               <TextView
                   android:id="@+id/item_status"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="seen"
                   android:layout_alignParentRight="true"
                   android:padding="8dp"
                   android:textStyle="bold"
                   android:textSize="12dp"
                   android:textColor="@color/white"



                   />
</androidx.cardview.widget.CardView>



           </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/linerItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F7B84B"
            android:padding="8dp"
            android:orientation="horizontal"
            android:id="@+id/linerItem23"
            android:layout_marginTop="2dp"

            >

            <ImageView
                android:id="@+id/android_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-6dp"
                android:src="@drawable/ic_baseline_description_24_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sent"
                android:textColor="@color/white"
                android:id="@+id/item_confirmedBysect"
                android:layout_marginLeft="8dp"

                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="3dp"


                />



        </LinearLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>